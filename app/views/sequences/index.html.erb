<% content_for :title, "Library" %>

<table class="table table-striped table-hover tablesorter" id="library">
  <thead>
    <tr>
      <th>Title</th>
      <th>Artist</th>
      <th>Date Added</th>
      <th>Last Played</th>
      <th>Top Score</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @sequences.each do |sequence| %>
      <tr>
        <td><%= sequence.title %></td>
        <td><%= sequence.artist %></td>
        <td><%= sequence.created_at.strftime('%a %b %d') %></td>
        <% if sequence.sessions.empty? %>
          <td>n/a</td>
          <td>0%</td>
        <% else %>
          <td><%= sequence.sessions.last.created_at.strftime('%a %b %d') %> ago</td>
          <td><%= sequence.sessions.maximum(:score) %>%</td>
        <% end %>
        <td>
          <%= link_to 'Show', sequence %>
          <%= link_to 'Edit', edit_sequence_path(sequence) %>
          <%= link_to 'Destroy', sequence, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Sequence', new_sequence_path %>

